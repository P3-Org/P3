<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.aau.p3.controller.AllCasesController"
      alignment="TOP_CENTER" spacing="15" style="-fx-padding: 20;">

    <Label text="All Cases" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <TableView prefWidth="600" prefHeight="350">
        <columns>
            <TableColumn text="Case ID" prefWidth="100" />
            <TableColumn text="Title" prefWidth="300" />
            <TableColumn text="Owner" prefWidth="150" />
            <TableColumn text="Status" prefWidth="100" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Show my cases" onAction="#handleMyCases" />
        <Button text="Export" onAction="#handleExport" />
    </HBox>
</VBox>
