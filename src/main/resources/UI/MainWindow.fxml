<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane dividerPositions="0.25" prefHeight="700.0" prefWidth="1100.0" stylesheets="@nav.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aau.p3.platform.controller.MainController">

    <items>
        <!-- LEFT: Navigation -->
        <VBox prefWidth="240.0" spacing="8.0" styleClass="sidebar">
            <children>
                <Button maxWidth="Infinity" onAction="#openHomePage" styleClass="nav-item" text="Homepage" />
                <TitledPane animated="false" expanded="false" text="Cases">
                    <content>
                        <VBox spacing="6.0" styleClass="submenu">
                            <children>
                                <Button maxWidth="Infinity" onAction="#openMyCases" styleClass="nav-item" text="My cases" />
                                <Button maxWidth="Infinity" onAction="#openAllCases" styleClass="nav-item" text="All cases" />
                            </children>
                        </VBox>
                    </content>
                </TitledPane>

                <Separator />

                <Button maxWidth="Infinity" onAction="#openAddressLookup" styleClass="nav-item" text="Address lookup" />
                <Button maxWidth="Infinity" onAction="#openHydrologicalTool" styleClass="nav-item" text="Hydrological tool" />
                <Button maxWidth="Infinity" onAction="#openHelpDesk" styleClass="nav-item" text="Help desk" />
                <Button maxWidth="Infinity" onAction="#exitApp" styleClass="nav-item" text="Exit" />
            </children>
        </VBox>

        <!-- RIGHT: Content area -->
        <StackPane fx:id="contentArea" />
    </items>
</SplitPane>
